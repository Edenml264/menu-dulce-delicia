---
// Este componente muestra la sección "Clásicas" del menú de la cafetería.
const clasicas = [
  {
    nombre: "Chocolate",
    descripcion: "Chocolate hershey, Philadelphia y Lechera",
    precio: 80,
  },
  {
    nombre: "Mermelada de Fresa",
    descripcion: "Mermelada de Fresa, Philadelphia y Lechera",
    precio: 80,
  },
  {
    nombre: "Cajeta",
    descripcion: "Cajeta, Philadelphia y Plátano",
    precio: 80,
  },
  {
    nombre: "Cacahuate",
    descripcion: "Philadelphia, Fresa y Crema de Cacahuate",
    precio: 80,
  },
  {
    nombre: "Light",
    descripcion: "Chocolate, Philadelphia, Fresa y Crema de Cacahuate",
    precio: 90,
  },
];

// Imagen de ejemplo (puedes reemplazarla por otra en public/)
const imagenClasicas = "/DulceDelicia-images-1.png";
---

<section class="max-w-3xl mx-auto mt-10 p-6 bg-white rounded-lg shadow-md flex flex-col md:flex-row md:items-stretch gap-6">
  <div class="md:w-72 w-full flex justify-center self-center md:h-full p-2 order-1 md:order-none">
    <img src={imagenClasicas} alt="Clásicas" class="md:h-full md:w-72 w-48 h-48 object-cover rounded-2xl shadow-lg bg-yellow-50" />
  </div>
  <div class="flex-1">
    <h2 class="text-2xl font-bold mb-4 text-yellow-700">Clásicas</h2>
    <ul>
      {clasicas.map(item => (
        <li class="flex justify-between items-start py-3 border-b border-gray-100 last:border-b-0">
          <div>
            <div class="text-lg font-semibold text-gray-800">{item.nombre}</div>
            <div class="text-sm text-gray-500">{item.descripcion}</div>
          </div>
          <span class="text-lg font-bold text-yellow-700">${item.precio}.00</span>
        </li>
      ))}
    </ul>
  </div>
</section>
